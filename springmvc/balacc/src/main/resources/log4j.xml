<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- 控制台输出配置 -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out"/>
		<!--全局过滤器,过滤所设置的level的信息都过滤不显示出来  -->
		<param name="Threshold" value="info"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %d{MM-dd HH:mm:ss,SSS} %m  (%F:%L) \n" />
		</layout>
	</appender>

	<!-- 每天会产生一个新的日志文件 -->
	<appender name="filelog_daily" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="../logs/vcss/ibc_pps_client.log"/>
		<param	name="DatePattern" value="'daily.'yyyy-MM-dd'.log'"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %d{MM-dd HH:mm:ss,SSS} %m  (%F:%L) \n" />
		</layout>
	</appender>
	<!-- 接口日志文件配置 -->
	<appender name="interfacefilelog_daily" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="../logs/vcss/interface/daily.log"/>
		<param	name="DatePattern" value="'daily.'yyyy-MM-dd'.log'"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %d{MM-dd HH:mm:ss,SSS} %m  (%F:%L) \n" />
		</layout>
	</appender>
	<!-- 接口日志文件名称-->
	<logger  name="interfacelog">
		<level class="org.apache.log4j.Level" value="DEBUG" />
		<appender-ref ref="interfacefilelog_daily"/>  
	</logger>

	<!-- 配置到输出信息过滤 级别 error>warn>info>debug-->
	<logger name="java.sql.Connection">
		<level class="org.apache.log4j.Level" value="DEBUG" />
	</logger>
	<logger name="java.sql.Statement">
		<level class="org.apache.log4j.Level" value="DEBUG" />
	</logger>
	<logger name="java.sql.PreparedStatement">
		<level class="org.apache.log4j.Level" value="DEBUG" />
	</logger>
	<logger name="java.sql.ResultSet" >
		<level class="org.apache.log4j.Level" value="info" />
	</logger>
	<logger name="org.springframework" >
		<level class="org.apache.log4j.Level" value="info" />
	</logger>
	<logger name="org.apache.ibatis">
		<level class="org.apache.log4j.Level" value="info" />
	</logger>
	<logger name="com.ibatis">
		<level value="debug" />
	</logger>
	<logger name="org.quartz">
		<level value="error" />
	</logger>



	<logger name="org.mybatis.spring.SqlSessionUtils">
		<level value="error" />
	</logger>
	<logger name="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<level value="error" />
	</logger>
	<logger name="com.mchange.v2.c3p0.impl.AbstractPoolBackedDataSource">
		<level value="error" />
	</logger>
	<logger name="org.mybatis.spring.transaction.SpringManagedTransaction">
		<level value="error" />
	</logger>
	<!--定义全局的日志输出级别,但是在输出目地的配置中配置的具体输出级别优先级高于全局的优先级  -->
	<root>

		<level  value="DEBUG" />
		<appender-ref ref="console" />
		<appender-ref ref="filelog_daily" /> 
		<appender-ref ref="filelog_daily" /><!--  -->

	</root>

</log4j:configuration>
